  "description": "VC Issuer backend",
  "main": "dist/index.js",
  "scripts": {
    "test": "npx jest --coverage --verbose",
    "lint": "npx eslint ./src ./test --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npx eslint ./src ./test --ext .js,.jsx,.ts,.tsx --fix",
    "build": "npx tsc",
    "build:watch": "npx tsc --watch",
    "serve": "node dist/index.js",
    "serve:watch": "npx nodemon dist/index.js",
    "start": "npm run build && npm run serve",
    "start:dev": "npx concurrently \"npm run build:watch\" \"npm run serve:watch\""
